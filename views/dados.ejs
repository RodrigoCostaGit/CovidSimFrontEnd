                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-chart-area me-1"></i>
                                Novos Casos 
                            </div>
                            <div class="card-body">
                                <canvas id="myAreaChart" width="100%" height="30"></canvas>
                                <script>
                                var test = <%- JSON.stringify(inf) %>; 
                                var test1 = <%- JSON.stringify(inf1) %>;    
                                chartit();
                                function chartit(){                                     
                                var ctx = document.getElementById('myAreaChart');
                                    var myChart = new Chart(ctx, {
                                        type: 'line',
                                        data: {
                                            labels: test1, 
                                            datasets: [{
                                                label: 'Novos casos diários',
                                                data: test,
                                                backgroundColor: [
                                                    'rgba(255, 99, 132, 0.2)'
                                                ],
                                                borderColor: [
                                                    'rgba(255, 99, 132, 1)'
                                                ],
                                                borderWidth: 2
                                            }]
                                        },
                                    });
                                }
                                </script>
                            
